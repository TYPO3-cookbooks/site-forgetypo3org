[global]
loglevel:4
#       0: no logging
#       1: errors (tpa_id + user)
#       2: success and errors (tpa_id + user)
#       3: errors (tpa_id + user + expires + signature)
#       4: success and errors (tpa_id + user + expires + signature)

public_ssl_key: /home/redmine/sso/sigsso_public.key
tokensfile:     /home/redmine/sso/tmp/used_sso_tokens.txt
logfile:        /home/redmine/sso/tmp/sigsso.log
externalOpenssl: 0
tmp_signature_dir: /home/redmine/sso/tmp
tmp_signature_prefix: sign_
windows_server: 0


[errorcodes]
user_missing:
tpaid_missing:
expires_missing:
signature_missing:
tpaid_unknown:
sslkey_missingconf:
sslkey_missingfile:
usedtokens_missingconf:
usedtokens_missingfile:
usedtokens_allreadyused:
signature_invalid:
tpa_error:
logfile_missingconf:
logfile_missingfile:
expires_exeeded:

[main]
redmine: php://home/redmine/sso/redmine_sso.php --url=http://<%= node['redmine']['hostname'] %>/